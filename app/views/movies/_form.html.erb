<%= form_for @movie, html: {multipart: true}  do |f| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> <%= t('error')%></h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

    <br><%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category") %>

  <div class="field">
    <br><%= f.label :description %><br>
    <%= f.text_area :description, :cols => "50", :rows => "5" %>
  </div>

  <div class="field">
    <br><%= f.label :movie_length %><br>
    <%= f.text_field :movie_length %>
  </div>

  <div class="field">
    <br><%= f.label :director %><br>
    <%= f.text_field :director %>
  </div>

  <div class="field">
  <br><%= f.label :rating %><br>
    <%= f.text_field :rating %>
  </div>

  <div class="field">
    <br><%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
  <br><%= f.submit %>
  </div>

<% end %>
