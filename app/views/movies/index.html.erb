<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>2018 BEST MOVIES reviews!!</h1><br>
    <p><%= link_to "Sign Up to review NOW", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>


<% if @movies.count == 0 %>

  <h1> <%= t('movie.category_empty')%></h1>

<% else %>
<div class="row">
  <h2 class="current-category"><%= params[:category] %></h2>
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
      </div>
    </div>
  <% end %>
  <% end %>
</div>
